<?xml version="1.0" encoding="utf-8"?>
 <com.example.a1.BidirSlidingLayout xmlns:android="http://schemas.android.com/apk/res/android"  
    xmlns:tools="http://schemas.android.com/tools"  
    android:id="@+id/bidir_sliding_layout"  
    android:layout_width="fill_parent"  
    android:layout_height="fill_parent" >  
  
    <RelativeLayout  
        android:id="@+id/left_menu"  
        android:layout_width="270dip"  
        android:layout_height="fill_parent"  
        android:layout_alignParentLeft="true"  
         
        android:visibility="invisible" >  
  
        <ListView
        android:id="@+id/leftlist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="41dp"
        android:layout_marginTop="25dp" 
        android:focusable="true">
    </ListView>
    </RelativeLayout>  
  
    <RelativeLayout  
        android:id="@+id/right_menu"  
        android:layout_width="270dip"  
        android:layout_height="fill_parent"  
        android:layout_alignParentRight="true"  
        
        android:visibility="invisible" >  
  
        <ListView
        android:id="@+id/rightlist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="41dp"
        android:layout_marginTop="25dp" >
        </ListView>
        </RelativeLayout>  
  
    <LinearLayout  
        android:id="@+id/content"  
        android:layout_width="320dip"  
        android:layout_height="fill_parent"  
        android:orientation="vertical"
        android:background="#e9e9e9" >  
  
       <RelativeLayout
            android:id="@+id/container1231"
            android:layout_width="match_parent"
            android:layout_height="50dip">
	    </RelativeLayout>
	
        <RelativeLayout
            android:id="@+id/container123"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/rainbg1"
            android:tileMode="repeat" 
            android:clickable="true"
            android:focusable="true"
            android:focusableInTouchMode="true"
            tools:context="com.example.a1.MainActivity"
            tools:ignore="MergeRootFrame" >
 <com.example.a1.VerticalSeekBarT
     android:id="@+id/verticalSeekBar4"
     android:layout_width="wrap_content"
     android:layout_height="200dp"
     android:layout_alignBottom="@+id/button4"
     android:layout_alignParentRight="true"
     android:max="100"
     android:progress="50" />
 
 <Button
     android:id="@+id/button4"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_alignBaseline="@+id/button3"
     android:layout_alignBottom="@+id/button3"
     android:layout_alignParentRight="true"
     android:layout_marginRight="59dp"
     android:background="@drawable/main_play"
     android:onClick="onlake"
     android:tag="q"
     android:text="@string/qin" />

 <com.example.a1.VerticalSeekBarT
     android:id="@+id/verticalSeekBar3"
     android:layout_width="wrap_content"
     android:layout_alignBottom="@+id/button3"
     android:layout_alignParentLeft="true"
     android:layout_height="200dp"
     android:max="100"
     android:progress="50" />



 <Button
     android:id="@+id/button3"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_alignParentBottom="true"
     android:layout_marginBottom="35dp"
     android:layout_marginLeft="14dp"
     android:layout_toRightOf="@+id/verticalSeekBar3"
     android:background="@drawable/main_play"
     android:onClick="onrain"
     android:tag="y"
     android:text="@string/yu" />

</RelativeLayout>


</LinearLayout>  
  
</com.example.a1.BidirSlidingLayout>